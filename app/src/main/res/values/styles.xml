<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--<item name="titleTextColor">@color/colorAccent</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
        <!--<item name="actionBarItemBackground">@drawable/menu_item_selector</item>-->
        <!--<item name="android:actionBarItemBackground">@drawable/menu_item_selector</item>-->
        <item name="toolbarNavigationButtonStyle">@style/QfangToolbarNavigationButtonStyle</item>
        <item name="android:listDivider">@drawable/horizontal_line</item>

        <item name="android:divider">@drawable/horizontal_line</item>
        <!--<item name="navigationIcon">@mipmap/qfang_white_back_image</item>-->
        <item name="actionMenuTextColor">@color/qFFFFFF</item>
        <!--actionbar 高度-->
        <!--<item name="android:actionBarSize">@dimen/px_dp_100</item>-->
        <!--<item name="EasyListFilterMenuStyle">@style/QfamgEasyListFilterMenuStyle</item>-->
        <!--<item name="kProgressLayoutsStyle">@style/qfang_KProgressLayoutStyle</item>-->
        <item name="EasyRecyclerViewStyle">@style/easyRecyclerViewStyle_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageDetailsTheme" parent="AppBaseTheme">
        <item name="colorPrimaryDark">@color/q88333333</item>
        <!--<item name="colorPrimaryDark">#CF333333</item>-->
        <!--<item name="android:windowBackground">@color/q88333333</item>-->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="QfangToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <!--<item name="android:background">@drawable/menu_item_selector</item>-->
        <item name="android:minWidth">56dp</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>
