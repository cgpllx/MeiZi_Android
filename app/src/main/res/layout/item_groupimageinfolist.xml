<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:background="@drawable/imagebackground"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/imagecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:background="@drawable/imagecounttextviewbackground"
            android:gravity="bottom|center_horizontal|left"
            android:paddingLeft="@dimen/q3dp"
            android:paddingRight="@dimen/q3dp"
            android:paddingBottom="@dimen/q3dp"
            android:paddingTop="@dimen/q2dp"
            tools:text="12pics"
            android:textColor="@color/qFFFFFF"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/q10dp"
            android:layout_marginBottom="@dimen/q40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal|left"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="5dp"
            android:background="@color/qFFFFFF"
            android:textColor="@color/q333333"
            android:textSize="@dimen/q16sp"
            tools:text="正常使用效果"
            android:layout_alignBottom="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

